<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    tools:context=".Search">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/fondeu" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/titulo2"
                style="@style/sty_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="¿Dónde está mi balneario?" />

            <fragment
                android:id="@+id/mapView"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginTop="30dp"
                map:cameraZoom="14"
                map:uiRotateGestures="true"
                map:uiZoomControls="true" />

            <EditText
                android:id="@+id/input_user6"
                style="@style/sty_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Escriba su ubicación"
                android:inputType="text" />

            <Button
                android:id="@+id/search6"
                style="@style/sty_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver cercanos"
                app:cornerRadius="5dp"
                app:strokeColor="@color/black"
                app:strokeWidth="2dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/fav6"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginEnd="50dp"
                    android:padding="10dp"
                    android:background="#00FFFFFF"
                    android:elevation="20dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/favorites" />

                <ImageButton
                    android:id="@+id/logOut6"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:padding="10dp"
                    android:background="#00FFFFFF"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/logout" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>